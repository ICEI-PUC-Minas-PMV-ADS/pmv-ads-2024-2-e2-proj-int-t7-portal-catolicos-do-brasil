</head>
<body>
    <header>
       
        <div class="cabecalho">
            <img src="~/css/images/emojione_church.png" class="imagemCabecalho">
            <h1 class="poppins-regular nomePortal">PORTAL CATÓLICO DO BRASIL</h1>

        </div>
           

    <nav class="menu poppins-medium">
            <ul class="">
                <li class="">
                    <a class=" " asp-area="" asp-controller="Home" asp-action="Index">INÍCIO</a>
                </li>
                <li class="">
                    <a class=" " asp-area="" asp-controller="Home" asp-action="Missas">MISSAS</a>
                </li>
                 <li class="">
                    <a class=" " asp-area="" asp-controller="Home" asp-action="Liturgias">LITURGIA</a>
                 </li>
                <li class="">
                    <a class=" " asp-area="" asp-controller="Home" asp-action="Eventos">EVENTOS</a>
                </li>
                <li class="">
                    <a class=" " asp-area="" asp-controller="Home" asp-action="SantoDoDia">SANTO DO DIA</a>
                </li>
                <li class="">
                    <a class=" " asp-area="" asp-controller="Home" asp-action="Publicacoes">PUBLICAÇÕES</a>
                </li>
            </ul>
    </nav>



        <div>

            <img src="~/css/images/cruz_background.png" class="cruz-back">


        </div>


    </header>




    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>







