@model IEnumerable<PortalCatolicoBrasil.Models.Evento>

@{
    ViewData["Title"] = "Eventos";
}

<h1>Eventos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo Evento</a>
</p>

<div class="container mt-4">
    <!-- Formulário de busca -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Pesquisar eventos</h5>
            <form class="row g-3">
                <div class="col-md-3">
                    <label for="estado" class="form-label">Estado*</label>
                    <select id="estado" class="form-select">
                        <option selected>Escolha...</option>
                        <option>SP</option>
                        <option>RJ</option>
                        <option>SC</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="cidade" class="form-label">Cidade</label>
                    <select id="cidade" class="form-select">
                        <option selected>Escolha...</option>
                        <option>São Paulo</option>
                        <option>Rio de Janeiro</option>
                        <option>Camboriú</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="bairro" class="form-label">Bairro</label>
                    <select id="bairro" class="form-select">
                        <option selected>Escolha...</option>
                        <option>Centro</option>
                        <option>Zona Sul</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="paróquia" class="form-label">Paróquia</label>
                    <select id="paróquia" class="form-select">
                        <option selected>Escolha...</option>
                        <option>Paróquia A</option>
                        <option>Paróquia B</option>
                    </select>
                </div>
                <div class="col-12">
                    <button type="button" class="btn btn-primary">Buscar</button>
                    <button type="button" class="btn btn-secondary">Pesquisar por minha localização atual</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Resultados da pesquisa - exibição em estilo de lista -->
    <h5 class="mb-4">Resultado da pesquisa</h5>
    <div class="list-group">
        @foreach (var item in Model)
        {
            <div class="list-group-item d-flex justify-content-between align-items-start mb-3">
                <div class="d-flex flex-column">
                    <div class="text-muted mb-2">
                        <strong>@item.DataInicio.ToString("dd MMM").ToUpper()</strong>
                    </div>
                    <div>
                        <h5 class="mb-1">@item.TituloEvento</h5>
                        <p class="mb-1">
                            <strong>Data:</strong> @item.DataInicio.ToString("dd MMM yyyy") - @item.DataEncerramento.ToString("dd MMM yyyy")<br>
                            <strong>Horário:</strong> @item.HorarioInicio - @item.HorarioEncerramento<br>
                            <strong>Local:</strong> @item.NomeParoquia, @item.Logradouro, @item.Numero - @item.Bairro, @item.Cidade - @item.Estado<br>
                            <strong>Telefone:</strong> @item.Telefone<br>
                            <strong>Email:</strong> @item.Email
                        </p>

                    </div>
                    <a href="#" class="btn btn-outline-primary btn-sm">Ver no mapa</a>
                </div>
                <div class="d-flex align-items-center">
                    @if (!string.IsNullOrEmpty(item.BannerPath))
                    {
                        <img src="@Url.Content("~/uploads/" + item.BannerPath)" class="card-img-top" alt="Banner do Evento" height="250" width="250">
                    }
                   
                </div>
            </div>
        }
    </div>

    <!-- Link para cadastrar evento -->
    <div class="text-center mb-4">
        <a asp-action="Create" class="btn btn-primary">Você quer que a igreja anuncie seu evento? Cadastre aqui</a>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
